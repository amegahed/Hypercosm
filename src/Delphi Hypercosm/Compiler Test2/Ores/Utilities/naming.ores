include "system/strings.ores";


adjective nameable
does
	// name querying methods
	//
	string type question get_name;
end;	// nameable


adjective renameable
extends
	nameable
does
	// name setting methods
	//
	verb set_name
		to string type name;
	end;
end;	// renameable
