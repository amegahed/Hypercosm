adjective comparable
does
    boolean question same
        as comparable type item;
    end;
end;    // comparable


adjective orderable
extends
    comparable
does
    boolean question less
        orderable type item;
    end;
    boolean question greater
        orderable type item;
    end;
end;    // orderable
