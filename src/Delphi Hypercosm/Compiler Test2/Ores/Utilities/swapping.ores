{***************************************************************}
{				swapping methods for enumerated types			}
{***************************************************************}


verb swap_booleans
    boolean reference boolean1;
    and boolean reference boolean2;
is
    boolean temp is boolean1;
    boolean1 is boolean2;
    boolean2 is temp;
end;    // swap_booleans


verb swap_chars
    char reference char1;
    and char reference char2;
is
    char temp is char1;
    char1 is char2;
    char2 is temp;
end;    // swap_chars


