const scalar one_half = 1 / 2;
const scalar one_third = 1 / 3;
const scalar two_thirds = 2 / 3;
const scalar one_fourth = 1 / 4;
const scalar three_fourths = 3 / 4;


scalar question half
    of scalar s = 1;
is
    answer s / 2;
end;    // half


scalar question twice
    scalar s;
is
    answer s * 2;
end;    //. twice


scalar question thrice
    scalar s;
is
    answer s * 3;
end;    // thrice


scalar question quadruple
    scalar s;
is
    answer s * 4;
end;    // quadruple
