adjective scaleable
does
	vector question get_size;
end;	// scaleable


adjective rescaleable
does
	verb set_size
		to vector size;
	end;
end;	// rescaleable


adjective reshapeable
does
	verb reshape
		from vector low;
		to vector high;
	end;
end;	// reshapeable



